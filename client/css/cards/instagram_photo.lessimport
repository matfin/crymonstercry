div.image {
	.display(flex);
	.flex-direction(column);
	.box-sizing(border-box);
	float: left;
	width: 33%;
	padding: @gridSpacing / 2;

	figure {
		padding: @gridSpacing;
		background-color: @colourWhite;
		.display(flex);
		.flex-direction(column);
		.flex(1);
		.box-shadow(0 1px 0 rgba(255,255,255,.4),0 1px 0 1px rgba(255,255,255,.1));

		figcaption {
			margin-top: @gridSpacing;
			text-align: left;
		}
	}
}