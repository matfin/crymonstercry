.release {
	position: relative;
	display: inline-block;
	width: 100%;
	margin-bottom: @gridSpacing * 4;

	> img {
		display: inline;
		float: left;
		width: @gridSpacing * 30;
		margin-left: @gridSpacing * 2;
		min-height: @gridSpacing * 30;
		height: auto;
	}

	> div.info {
		position: relative;
		display: inline;
		float: left;
		width: @gridSpacing * 25;
		min-height: @gridSpacing * 30;
		padding-left: @gridSpacing * 2;
		.box-sizing(border-box);
		text-align: left;

		h2 {
			display: block;
			color: @colourWhite;
			margin-bottom: @gridSpacing * 1.25;
		}

		ol.tracks {
			li {
				color: @colourWhite;
				margin-bottom: @gridSpacing / 2;
			}
		}	

		ol.links {
			position: absolute;
			bottom: 0;
			left: @gridSpacing * 2;

			width: 100%;

			li {
				display: inline;
				float: left;
				width: @gridSpacing * 7.5;
				height: @gridSpacing * 3;
				margin-right: @gridSpacing / 2;
				a {
					display: block;
				}
			}
		}
	}

	
}