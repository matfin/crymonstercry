footer.mobile {
	width: 100%;
	background-color: rgba(45, 57, 74, 0.5);

	ol {
		.display(flex);
		width: 100%;

		li {
			.flex(1);
			.flex-direction(row);
			text-align: center;
			a {
				margin: auto;
				display: block;
				text-align: center;
				width: @gridSpacing * 2;
				height: @gridSpacing * 2;
				line-height: @gridSpacing * 2;
				color: @colourWhite;	
			}
			
		}

	}
}