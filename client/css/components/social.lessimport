.social {
	
	.flex(1);
	min-width: @gridSpacing * 6.25;
	padding-top: @gridSpacing * 4;

	ol {
		display: inline-block;
		li {
			display: block;
			margin-top: @gridSpacing;
			float: right;
			clear: both;
			a {
				display: block;
				width: @gridSpacing * 3;
				height: @gridSpacing * 3;
				line-height: @gridSpacing * 3;
				background-color: @backgroundColourSecondary;
				.border-radius(@gridSpacing * 2);
				color: @backgroundColourPrimary;
				font-size: @fontSizeMiddle;
			}
		}
	}
}