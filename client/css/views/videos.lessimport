#video {
	> div.video {
		display: inline-block;
		margin: 0 auto;
		margin-bottom: @gridSpacing * 4;
		width: 75%;
		.box-sizing(border-box);

		h2 {
			float: left;
			color: @colourWhite;
			margin-bottom: @gridSpacing;
		}

		iframe {
			float: left;
		}
	}
}

&.mobile {
	#video {
		> div.video {
			width: 100%;
		}

		h2 {
			font-size: 1.0em;
			padding: 0 @gridSpacing / 2;
			text-align: left;
		}
	}
}