#video {
	> div.video {
		display: block;
		float: left;
		margin-bottom: @gridSpacing * 4;
		width: 100%;
		min-height: @gridSpacing * 20;
		.box-sizing(border-box);
		padding-left: @gridSpacing * 2;

		h2 {
			float: left;
			color: @colourWhite;
			margin-bottom: @gridSpacing;
		}

		iframe {
			float: left;
		}
	}
}